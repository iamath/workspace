<html>
  <head>
    <meta charset="utf-8" />
    {% include "components/default-styles.njk" %}
    <link rel="stylesheet" href="/fa/css/all.min.css" />
    <link rel="stylesheet" href="/assets/css/cliente.css" />
  </head>
  <body>
    {% include "cliente/navbar.njk" %}
    <div class="main">
      <div class="row pt-3">
        {% include "cliente/sidebar.njk" %}
        <div class="col-9 px-2">
          <div class="col-12 bg-white shadow py-3 rounded-lg">
            <h4 class="font-weight-bold">Mais Procurados</h4>
            <hr />

            <div
              id="maisProcurados"
              class="carousel slide"
              data-ride="carousel"
            >
              <div class="carousel-inner px-5">
                <div class="carousel-item active">
                  <div class="row">
                    {% set contador = 0 %} {% for topServico in topServicos %}
                    {% if contador == 3 %}
                  </div>
                </div>
                <div class="carousel-item">
                  <div class="row">
                    {% endif %}
                    <div class="col-4">
                      <div class="card text-center" style="height: 262px">
                        <img
                          src="/assets/img/servicos/{{ topServico.foto }}"
                          class="card-img-top"
                        />
                        <div
                          class="card-body d-flex flex-column"
                          style="justify-content: space-between"
                        >
                          <h5 class="card-title">
                            {{ topServico.nome }}
                          </h5>
                          <a
                            href="/cliente/servico/{{ topServico.id }}"
                            class="btn btn-outline-primary"
                          >
                            Detalhes
                          </a>
                        </div>
                      </div>
                    </div>
                    {% set contador = contador + 1 %} {% endfor %}
                  </div>
                </div>
              </div>
              <span class="prev">
                <a
                  class="text-primary"
                  href="#maisProcurados"
                  role="button"
                  data-slide="prev"
                >
                  <i class="fas fa-arrow-circle-left fa-2x"></i>
                </a>
              </span>
              <span class="next">
                <a
                  class="text-primary"
                  href="#maisProcurados"
                  role="button"
                  data-slide="next"
                >
                  <i class="fas fa-arrow-circle-right fa-2x"></i>
                </a>
              </span>
            </div>
          </div>
          <div class="col-12 bg-white shadow py-3 mt-3 rounded-lg">
            <h4 class="font-weight-bold">Baseado em pedidos anteriores</h4>
            <hr />
            {% if ultimosServicos == 404 %}
            <p class="text-muted text-center">Você ainda não realizou nenhum pedido</p>
            {% else %}
            <div class="row">
              {% for ultimoServico in ultimosServicos %}

              <div class="col-4">
                <div class="card text-center" style="height: 262px">
                  <img
                    src="/assets/img/servicos/{{ ultimoServico.foto }}"
                    class="card-img-top"
                  />
                  <div
                    class="card-body d-flex flex-column"
                    style="justify-content: space-between"
                  >
                    <h5 class="card-title">
                      {{ ultimoServico.nome }}
                    </h5>
                    <a
                      href="/cliente/servico/{{ ultimoServico.id }}"
                      class="btn btn-outline-primary"
                    >
                      Detalhes
                    </a>
                  </div>
                </div>
              </div>

              {% endfor %}
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    {% include "components/default-scripts.njk" %} {% include
    "components/logoff-script.njk" %}
  </body>
</html>
